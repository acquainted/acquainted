<div class="container top-margin">
  <h1>Company Directory</h1>

  <%= search_form_for @search, url: search_profiles_path, method: :post do |f| %>
    <div class="input-group">
      <%= f.text_field :position_or_department_cont, class: 'form-control clearable', placeholder: 'Get acquainted with...' %>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
          <i class="fa fa-search"></i>
        <% end %>
      </span>
    </div>
  <% end %>

  <div class="row filters">
      <div class="col-md-3">
        <select class="form-control" id="select">
          <option disabled selected class="filter_by">Location</option>
          <option>New York, NY</option>
          <option>San Francisco, CA</option>
          <option>London, UK</option>
          <option>Shanghai, China</option>
        </select>
      </div>
      <div class="col-md-3">
        <select class="form-control" id="select">
          <option disabled selected class="filter_by">Product</option>
          <option>Mobile</option>
          <option>Web Apps</option>
          <option>B2B</option>
        </select>
      </div>
      <div class="col-md-3">
        <select class="form-control" id="select">
          <option disabled selected class="filter_by">Job Roles</option>
          <option>Developer</option>
          <option>Graphic Designer</option>
          <option>Product Manager</option>
          <option>UX Designer</option>
          <option>Department Head</option>
        </select>
      </div>
      <div class="col-md-3">
        <select class="form-control" id="select">
          <option disabled selected class="filter_by">Expertise</option>
          <option>User Experience</option>
          <option>Accounting</option>
          <option>Sales</option>
          <option>Marketing</option>
          <option>Development</option>
        </select>
      </div>
  </div>

  <div class="row profiles">
  <% @profiles.each_with_index do |profile, idx| %>
    
    <div class="col-md-3">
      <div class="well profile_box">
          <div class="name"><%= link_to profile.user.first_name + ' ' + profile.user.last_name, profile_path(profile) %>
          </div>
          <%= image_tag(profile.avatar_l, height: '150', class: "center-block img-responsive img-circle") %>

          <div class="position"><%= profile.position %></div>
          <div class="department"><%= profile.department %></div>

        </div>
    </div>

    <% if idx % 4 == 3%>
    </div><!--end row-->
    <div class="row">
    <% end %>

  <% end %>

</div>
