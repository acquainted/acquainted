  	     </div>
  	  </div>

      <div id="upload">
            <a href="#" class="btn btn-warning"><i class="fa fa-file-text-o"></i></a>
            <a href="#" class="btn btn-warning"><i class="fa fa-file-image-o"></i></a>
            <a href="#" class="btn btn-warning"><i class="fa fa-file-video-o"></i></a>
      </div>

    </div>
  </div>

  <div id="right" class="col-md-3">
    <div id="calendar-well" class="well">
      Calendar
      <div class="calender">
        <div id="calendar"></div>
      </div>
      <%= image_tag 'acquainted-09.png', class: 'img-responsive'%><br>
      I prefer to be reached by:<br>
      <%= icon('phone')%> (347) 435-8904
    </div>
  </div>
</div>


<div class="modal fade" id="msgmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"><%= form_tag messages_path, method: :post do %>

  <div class="modal-dialog">
      <div class="form-group">
        <%= label_tag 'message[subject]', 'Subject' %>
        <%= text_field_tag 'message[subject]', nil, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= label_tag 'message[body]', 'Message' %>
        <%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control', required: true %>
      </div>

      <%= submit_tag 'Send', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
