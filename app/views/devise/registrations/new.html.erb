<div class="splash">
  <div class="col-md-3 form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :first_name, required: true, autofocus: true, :placeholder => "First Name", :class => "form-control"%>

      <%= f.text_field :last_name, required: true, autofocus: true, :placeholder => "Last Name", :class => "form-control"%>

      <%= f.email_field :email, required: true, autofocus: true, :placeholder => "Email Address", :class => "form-control"%>

      <%= f.password_field :password, required: true, :placeholder => "password", :class => "form-control" %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

        <%= f.password_field :passwor_confirmation, required: true, :placeholder => "confirm password", :class => "form-control", autocomplete: "off" %>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
