<div class="container">
  <div id="splash" class="col-md-4">
    <div id="logo"><img src="http://placehold.it/350x150" alt="Company Logo" /> </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", :class => "btn-primary login" %>
        <%= f.input :remember_me,label_html: { class: "remember" }, as: :boolean if devise_mapping.rememberable?  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
