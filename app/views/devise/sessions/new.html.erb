<div class="splash">
  <div class="row">
    <div id="tag" class="col-sm-6 col-sm-offset-3">Get Acquainted<br />with Your Company!</div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-sm-offset-4 form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
          <%= f.email_field :email, required: true, autofocus: true, :placeholder => "email address", :class => "form-control"%>
          <%= f.password_field :password, required: true, :placeholder => "password", :class => "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: 'btn-primary login' %>

        <% if devise_mapping.rememberable? -%>
            <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            </div>
        <% end -%>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
</div>
