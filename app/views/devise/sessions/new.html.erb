<div class="container">
  <div id="splash" class="col-sm-4">
    <div ><img src="http://placehold.it/350x150" alt="Company Logo" class="img-responsive center-block"/> </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
        <%= f.email_field :email, required: false, autofocus: true %>
        <%= f.password_field :password, required: false %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn-primary login' %>
      </div>


    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
